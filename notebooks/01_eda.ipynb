import pandas as pd
import numpy as np

# 1) Load raw data
yt_path = "data/raw/youtube_trending.csv"
gt_path = "data/raw/google_trends.csv"

df_yt = pd.read_csv(yt_path)
df_gt = pd.read_csv(gt_path)

# 2) Basic cleaning and date parsing
df_yt['publish_time'] = pd.to_datetime(df_yt['publish_time'], errors='coerce')
df_yt['trending_date'] = pd.to_datetime(df_yt['trending_date'], errors='coerce')

# Create a date column (day-level) to merge with Google Trends
df_yt['date'] = df_yt['trending_date'].dt.date
df_gt['date'] = pd.to_datetime(df_gt['date'], errors='coerce').dt.date

# 3) Merge with Google Trends on date
df = pd.merge(df_yt, df_gt, on='date', how='left')

# 4) Simple feature example: like-to-view ratio
df['like_view_ratio'] = df['likes'] / (df['views'] + 1e-6)

